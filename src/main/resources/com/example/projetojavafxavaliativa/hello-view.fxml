<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="732.0" prefWidth="637.0" spacing="20.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projetojavafxavaliativa.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox alignment="CENTER" prefHeight="44.0" prefWidth="0.0" spacing="15.0">
         <children>
            <Label text="Nº da conta">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="txtConta" prefHeight="44.0" prefWidth="404.0">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="70.0" prefWidth="699.0" spacing="15.0">
         <children>
            <Label text="Nome do Titular">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="txtTitular" prefHeight="44.0" prefWidth="383.0">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="42.0" prefWidth="699.0" spacing="30.0">
         <children>
            <RadioButton fx:id="rbCorrente" mnemonicParsing="false" onAction="#onClickCorrente" text="Corrente">
               <font>
                  <Font size="20.0" />
               </font>
               <toggleGroup>
                  <ToggleGroup fx:id="tipoConta" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="rbEspecial" mnemonicParsing="false" onAction="#onClickEspecial" text="Especial" toggleGroup="$tipoConta">
               <font>
                  <Font size="20.0" />
               </font>
            </RadioButton>
            <RadioButton fx:id="rbPoupanca" mnemonicParsing="false" onAction="#onClickPoupanca" text="Poupança" toggleGroup="$tipoConta">
               <font>
                  <Font size="20.0" />
               </font>
            </RadioButton>
         </children>
      </HBox>
      <VBox alignment="CENTER_LEFT" prefHeight="196.0" prefWidth="699.0" spacing="10.0">
         <children>
            <Label text="Limite:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <TextField fx:id="txtLimite" prefHeight="44.0" prefWidth="457.0">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Label text="Data de Vencimento:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <DatePicker fx:id="dateVenc" prefHeight="25.0" prefWidth="228.0" />
         </children>
      </VBox>
      <Button fx:id="btnCadastrar" mnemonicParsing="false" onAction="#onClickCadastrar" prefHeight="44.0" prefWidth="896.0" text="Cadastrar">
         <font>
            <Font size="20.0" />
         </font>
      </Button>
      <HBox alignment="CENTER" prefHeight="58.0" prefWidth="699.0">
         <children>
            <Button fx:id="btnDepositar" mnemonicParsing="false" onAction="#onClickDepositar" text="Depositar">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <TextField fx:id="txtDepositoSaque" prefHeight="44.0" prefWidth="296.0">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
            <Button fx:id="btnSacar" mnemonicParsing="false" onAction="#onClickSacar" prefHeight="44.0" prefWidth="121.0" text="Sacar">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="16.0" prefWidth="702.0" spacing="12.0">
         <children>
            <Label text="Saldo:">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
            <Label fx:id="lblSaldo" text="0,00">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="68.0" prefWidth="702.0">
         <children>
            <Button fx:id="btnPesquisar" mnemonicParsing="false" onAction="#onClickPesquisar" text="Pesquisar">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <TextField fx:id="txtPesquisar" prefHeight="44.0" prefWidth="296.0">
               <font>
                  <Font size="20.0" />
               </font>
            </TextField>
         </children>
      </HBox>
      <TextArea fx:id="txtAreaDados" prefHeight="200.0" prefWidth="200.0" />
   </children>
</VBox>
